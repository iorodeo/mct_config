<launch>
    <!-- Camera 1 -->
    <group ns="camera1" >
        <node pkg="camera1394" type="camera1394_node" name="camera1394_node">
            <rosparam file="camera_common.yaml"/>
            <rosparam file="camera1.yaml"/>
        </node>
	<node pkg="image_view" type="image_view" name="image_view1">
